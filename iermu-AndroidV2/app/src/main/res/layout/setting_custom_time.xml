<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custon_time"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/activity_top_margin"
            android:background="@color/cms_stroke" />

        <RelativeLayout
            android:id="@+id/set_custom_start"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/check_bg_selector"
            android:gravity="center_vertical">
            >

            <TextView
                android:id="@+id/time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/dev_open_time"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/center_back" />

            <TextView
                android:id="@+id/set_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_3"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center_vertical"
                android:inputType="none"
                android:text=""
                android:textColor="#b0b0b0" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/cms_stroke" />

        <RelativeLayout
            android:id="@+id/set_custom_close"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:background="@drawable/check_bg_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/dev_close_time"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/center_back" />

            <TextView
                android:id="@+id/set_close_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_1"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center_vertical"
                android:inputType="none"
                android:text=""
                android:textColor="#b0b0b0" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cms_stroke" />
    </LinearLayout>
</ScrollView>