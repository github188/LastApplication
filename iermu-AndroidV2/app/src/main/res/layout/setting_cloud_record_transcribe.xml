<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/text_cloud"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/iermu_cloud"
                android:textColor="#b0b0b0"
                android:textSize="@dimen/activity_text_size_two" />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/activity_top_margin"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/menu_iermu_buy"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"

            android:background="@drawable/check_bg_color_pressed"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:text="@string/open_cvr"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="155dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/activity_text_size_one" />

            <com.iermu.ui.view.SwitchButtonNew
                android:id="@+id/startcloud_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical" />
            <com.iermu.ui.view.SettingButtonLoad
                android:visibility="invisible"
                android:id="@+id/switchbutton_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="19dp"
            android:background="@color/cms_stroke"/>
        <LinearLayout
            android:id="@+id/set_time_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/set_on_time"
                android:textColor="#b0b0b0"
                android:textSize="@dimen/activity_text_size_two" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/cloud_time"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/check_bg_color_pressed"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_left_margin"
                    android:gravity="center_vertical"
                    android:text="@string/set_start_time"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <com.iermu.ui.view.SwitchButtonNew
                    android:id="@+id/cloudtime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical" />
                <com.iermu.ui.view.SettingButtonLoad
                    android:visibility="invisible"
                    android:id="@+id/switchbutton_loading_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/set_time_part"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:background="@drawable/check_bg_selector"
                android:focusable="true"
                android:layout_marginBottom="-1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_left_margin"
                    android:gravity="center_vertical"
                    android:text="@string/time_quantum"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />

                <TextView
                    android:id="@+id/time_tt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_1"
                    android:gravity="center_vertical"
                    android:textColor="#b0b0b0"
                    android:text=""
                    android:textSize="@dimen/activity_text_size_two" />
            </RelativeLayout>
            <View
                android:id="@+id/cloud_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/set_repeat_cloud"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/check_bg_selector"
                android:focusable="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/iermu_repeat"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />

                <TextView
                    android:id="@+id/week_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#b0b0b0"
                    android:textSize="@dimen/activity_text_size_one" />
            </RelativeLayout>
            <View
                android:visibility="invisible"
                android:id="@+id/cloud_line_two"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/set_cloud_state"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"

                android:background="@drawable/check_bg_selector"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_left_margin"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="@string/cloud_server_state"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/activity_bottom_margin"
                android:background="@color/cms_stroke"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>