<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alarm_big_image_default"
        android:src="@drawable/alarm_big_image_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/imageViewPosition"
        android:background="@drawable/alarm_setting_btn_bg_normal_bottom">

        <TextView
            android:id="@+id/textViewPositionTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/preset"
            android:textColor="#ff333333"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imageButtonPositionEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/cloud_preposition_edit" />
    </LinearLayout>

    <View
        android:id="@+id/viewPositionMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cloud_position_item_mask_normal" />
</RelativeLayout>