<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="50px"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/menu_iermu_buy"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:gravity="center_vertical"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/check_bg_color_pressed"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/iermu_camera_state"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <com.iermu.ui.view.SwitchButtonNew
                android:id="@+id/camlight_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <com.iermu.ui.view.SettingButtonLoad
                android:visibility="invisible"
                android:id="@+id/switchbutton_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/menu_cvr_buy"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:gravity="center_vertical"
             android:layout_marginBottom="-1dp"
            android:background="@drawable/check_bg_color_pressed"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="@string/iermu_switch"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <com.iermu.ui.view.SwitchButtonNew
                android:id="@+id/caminvert_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <com.iermu.ui.view.SettingButtonLoad
                android:visibility="invisible"
                android:id="@+id/switchbutton_loading_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/set_night_sun"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:background="@drawable/check_bg_selector"
            android:gravity="center_vertical"
            android:layout_marginBottom="-1dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="@string/iermu_night_sun"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:src="@drawable/setting_back_img" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/menu_feedback"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:background="@drawable/check_bg_color_pressed"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:text="@string/iermu_camera_no_voice"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <com.iermu.ui.view.SwitchButtonNew
                android:id="@+id/camaudio_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <com.iermu.ui.view.SettingButtonLoad
                android:visibility="invisible"
                android:id="@+id/switchbutton_loading_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/activity_bottom_margin"
            android:background="@color/cms_stroke"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:id="@+id/set_speed_manager"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:background="@drawable/check_bg_selector"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="@string/iermu_net_manager"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:src="@drawable/setting_back_img" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cms_stroke"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_height"
            android:layout_marginBottom="160px"
            android:visibility="gone"
            android:background="@drawable/check_bg_color_pressed"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="@string/iermu_part_start"
                android:textColor="@color/cms_center"
                android:textSize="@dimen/activity_text_size_one" />
            <com.iermu.ui.view.SwitchButtonNew
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>