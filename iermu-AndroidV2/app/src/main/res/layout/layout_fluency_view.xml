<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="3dp"
    android:layout_marginBottom="3dp"
    android:layout_height="150dp"
    android:layout_width="100dp"
    android:visibility="visible">
    <LinearLayout
        android:id="@+id/layout_fluency_ldview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#90000000"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ld_img"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/fluency_circle_white"/>
        <TextView
            android:id="@+id/ld_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textColorHighlight="#0c5776"
            android:text="@string/low_definition"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868686"/>
    <LinearLayout
        android:id="@+id/layout_fluency_hdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90000000"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hd_img"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/fluency_circle_white"/>
        <TextView
            android:id="@+id/hd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textColorHighlight="#0c5776"
            android:text="@string/high_definition"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868686"
        />
    <LinearLayout
        android:id="@+id/layout_fluency_uhdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#90000000"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/uhd_img"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/fluency_circle_white"/>
        <TextView
            android:id="@+id/uhd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textColorHighlight="#0c5776"
            android:text="@string/super_definition"/>
    </LinearLayout>
</LinearLayout>