<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <com.lib.pulltorefreshview.PullToRefreshLayout
        android:id="@+id/lvPullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />

        <com.lib.pulltorefreshview.pullableview.PullableListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:listSelector="#00000000"
            android:scrollbars="none" />

        <include layout="@layout/load_more" />
    </com.lib.pulltorefreshview.PullToRefreshLayout>

    <include layout="@layout/fragment_message_no_camlive" />

    <include layout="@layout/fragment_message_no_alarm" />

    <include layout="@layout/fragment_message_no_alarm_all" />

</RelativeLayout>
