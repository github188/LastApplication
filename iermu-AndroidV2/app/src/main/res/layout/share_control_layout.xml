<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/text_16_dm"
            android:textColor="#333333"
            android:text="@string/control_txt"/>
        <LinearLayout
            android:id="@+id/share_link"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="19dp"
            android:background="@drawable/pub_live_shape"
            android:layout_margin="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/apply_shary_secret_img"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/send_share_link"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14_language"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:text="@string/send_share_txt"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/link_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_icon_finish"
                android:layout_margin="4dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_public"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="19dp"
            android:background="@drawable/pub_live_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/apply_share_public_img"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    android:text="@string/send_share_public"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14_language"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/send_public_txt"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/public_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_icon_finish"
                android:layout_margin="4dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:visibility="invisible"
        android:id="@+id/close_share"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="16dp"
        android:textColor="@drawable/add_dev_buuton_text_selector"
        android:background="@drawable/iermu_selector"
        android:text="@string/close_secret_share"/>

</RelativeLayout>