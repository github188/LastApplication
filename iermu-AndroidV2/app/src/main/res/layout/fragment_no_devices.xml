<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#177be1"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#1362b3"/>

    <LinearLayout
        android:id="@+id/devices_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/dm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_no_dev"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewpager_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="bottom">
            <ImageView
                android:id="@+id/img_no_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/find_no_device"/>
            <TextView
                android:id="@+id/devices_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/img_no_device"
                android:text="@string/net_exception"
                android:layout_marginBottom="25dp"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/add_type_change"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@drawable/add_dev_buuton_text_selector"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/iermu_click_selector"
            android:text="@string/change_another_add_type"/>

    </RelativeLayout>
</LinearLayout>
