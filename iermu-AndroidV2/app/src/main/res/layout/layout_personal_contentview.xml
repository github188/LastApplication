<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/collection_photo"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:layout_marginBottom="-1dp"
                android:gravity="center_vertical"
                android:background="@drawable/iermu_share_bg_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@drawable/store_photo"
                    android:gravity="center_vertical"
                    android:text="@string/favourate_photo"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/cms_stroke"/>

            <RelativeLayout
                android:id="@+id/menu_iermu_buy"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:layout_marginBottom="-1dp"
                android:gravity="center_vertical"
                android:background="@drawable/iermu_share_bg_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="14dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@drawable/person_cloud"
                    android:gravity="center_vertical"
                    android:text="@string/iermu_dev_buy"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/cms_stroke"/>

            <RelativeLayout
                android:id="@+id/menu_cvr_buy"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:gravity="center_vertical"
                android:background="@drawable/iermu_share_bg_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="14dp"
                    android:drawableLeft="@drawable/person_record"
                    android:gravity="center_vertical"
                    android:text="@string/iermu_cvr_buy"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/activity_bottom_margin"
                android:background="@color/cms_stroke"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/menu_feedback"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:gravity="center_vertical"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/iermu_share_bg_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/person_question"
                    android:gravity="center_vertical"
                    android:drawablePadding="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:text="@string/app_send_msg"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/my_account"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@drawable/iermu_share_bg_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/person_edit_data"
                    android:gravity="center_vertical"
                    android:drawablePadding="14dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:text="@string/person_edit_data"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />

                <TextView
                    android:id="@+id/mail_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/img"
                    android:layout_marginRight="2dp"
                    android:drawableLeft="@drawable/mail_auth"
                    android:drawablePadding="2dp"
                    android:text="@string/mail_auth"/>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_back_img" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/agreement_request"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:gravity="center_vertical"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/iermu_share_bg_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/agreement_request"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="14dp"
                    android:layout_centerVertical="true"
                    android:text="@string/person_feedback"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/person_back_img" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/cms_stroke"/>
            <RelativeLayout
                android:id="@+id/menu_about"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_height"
                android:gravity="center_vertical"
                android:background="@drawable/iermu_share_bg_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/person_about"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="14dp"
                    android:layout_centerVertical="true"
                    android:text="@string/app_set_problem"
                    android:textColor="@color/cms_center"
                    android:textSize="@dimen/activity_text_size_one" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/setting_back_img" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cms_stroke"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/cms_stroke"/>
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_height"
                android:layout_gravity="center"
                android:background="@drawable/iermu_share_bg_selector"
                android:text="@string/logout_account"
                android:textColor="@color/red_btn_bg_color"
                android:textSize="@dimen/activity_text_size_one" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="20dp"
                android:background="@color/cms_stroke"/>
            </LinearLayout>

        </ScrollView>

</LinearLayout>
