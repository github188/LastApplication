<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1362b3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#177be1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/iermu_live_bg" />
            <TextView
                android:id="@+id/iermu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/iermu_live_txt"
                android:textColor="#ffffff"
                android:layout_marginTop="148dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_below="@+id/iermu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/iermu_live_titlte"
                android:text="@string/live_public_txt"
                android:drawablePadding="7dp"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="17dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_below="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="7dp"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="17dp"
                android:paddingBottom="15dp"
                android:drawableLeft="@drawable/iermu_live_title1"
                android:layout_height="wrap_content"
                android:text="@string/live_share_txt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="10dp"
                    android:background="@drawable/white_back">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:text="@string/content_legal"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="13dp"
                        android:text="@string/show_live_every"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/public_live_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="13dp"
                        android:text="@string/read_agree"
                        android:textColor="#333333"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/public_live"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/public_live_txt"
                        android:autoLink="all"
                        android:textSize="16dp"
                        android:textColor="@color/mycam_talk"
                        android:layout_alignBottom="@+id/public_live_txt"
                        android:text="@string/public_protocol" />
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="1.我保证直播的内容健康合法"/>-->
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:src="@drawable/agreement_bg"/>-->
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/applypub_protocol_content" />-->
                    <!--<TextView-->
                    <!--android:id="@+id/public_live"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:autoLink="all"-->
                    <!--android:text="公开直播协议"-->
                    <!--/>-->
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:background="@drawable/protocol_bg"
                    android:text="@string/read_terms" />

            </RelativeLayout>

        <Button
            android:id="@+id/buttonBegin"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/check_light_bg_selector"
            android:text="@string/start_set"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#b2b2b2"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/agree_protocol"/>
    </LinearLayout>
</ScrollView>