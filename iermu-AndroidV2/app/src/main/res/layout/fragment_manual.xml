<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#177be1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1362b3"/>

    <TextView
        android:id="@+id/inform_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="34dp"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/conn_dev_wifi"/>
    <!--<TextView-->
        <!--android:id="@+id/inform_text1"-->
        <!--android:layout_below="@+id/inform_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textColor="#ffffff"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:textSize="18sp"-->
        <!--android:text="@string/dev_wifi"/>-->
    <ImageView
        android:id="@+id/man_img"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/inform_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/manual_config"/>
    <Button
        android:id="@+id/config_btn"
        android:layout_below="@+id/man_img"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:background="@drawable/check_light_bg_selector"
        android:text="@string/goto_configre"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/change_wifi"
        android:layout_below="@+id/config_btn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:background="@null"
        android:text="@string/how_update_wifi"/>
