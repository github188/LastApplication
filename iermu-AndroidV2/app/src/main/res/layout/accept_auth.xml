<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/devi_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/share_bg" />

    <ImageButton
        android:id="@+id/auth_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/share_close"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/devi_bg"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/share_bg_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="@string/gain"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#ff6e00"
                android:text="lishengsheng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="@string/shared"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="41dp"
            android:text="@string/dev_name"/>

        <Button
            android:id="@+id/auth_ok"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/receive_bg"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="@string/accept_invite"/>
    </LinearLayout>

</RelativeLayout>