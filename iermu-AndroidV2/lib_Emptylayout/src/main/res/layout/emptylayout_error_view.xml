<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp" >

    <TextView
        android:id="@+id/emptylayout_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/emptylayout_error_message"
        android:drawableTop="@drawable/emptylayout_error_ic"
        android:textAppearance="?android:attr/textAppearanceMedium"        
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/emptylayout_error_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/emptylayout_error_button"
        android:layout_marginTop="16dp" />

</LinearLayout>
